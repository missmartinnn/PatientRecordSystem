{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }